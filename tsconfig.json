{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
      "target": "es2015",
      "module": "ES2015",
      "strict": false,
      "noImplicitAny": true,
      "sourceMap": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "declaration": true,
      "baseUrl": "./src",
      "lib": [
        "dom",
        "es2016",
        "es2017.object"
      ],
      "outDir": "dist",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
